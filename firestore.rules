rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default: deny all client-side reads and writes
    // Cloud Functions use Admin SDK which bypasses these rules
    match /{document=**} {
      allow read, write: if false;
    }

    // rateLimits collection - used by Cloud Functions for rate limiting
    // Only accessible via Admin SDK (Cloud Functions), not from client
    match /rateLimits/{docId} {
      allow read, write: if false;
    }
  }
}
